<% const campanha = { id: campanhaId, nome: (sessao && (sessao.titulo || sessao.nome)) ? (sessao.titulo || sessao.nome) : 'Sess√£o' }; %>
<%- include('../partials/_notas', { campanha }) %>


<script>
  (function() {
    // ‚úÖ Inje√ß√£o do ID da sess√£o vinda do backend
    const sessaoId = "<%= sessao.id %>";
    const storageKey = `party_${sessaoId}`;

    // ‚úÖ CORRE√á√ÉO: IDs corretos do HTML
    const personagensGrid = document.getElementById("partyGrid"); 
    const formPersonagem = document.getElementById("formPersonagem");
    const btnIniciarCombate = document.getElementById("btnStartCombat");

    // üîπ Recuperar personagens salvos
    function getParty() {
      return JSON.parse(localStorage.getItem(storageKey)) || [];
    }

    // üîπ Renderizar personagens na tela
    function renderParty() {
      // ‚úÖ CORRE√á√ÉO: Garante que 'personagensGrid' exista (s√≥ existe se o combate n√£o estiver ativo)
      if (!personagensGrid) {
        console.log("Modo de combate. A 'partyGrid' n√£o est√° na tela.");
        return;
      }

      personagensGrid.innerHTML = "";
      const party = getParty();

      if (party.length === 0) {
        personagensGrid.innerHTML = "<p class='text-center text-muted'>Nenhum personagem adicionado.</p>";
        return;
      }

      party.forEach(p => {
        const div = document.createElement("div");
        // Usei as classes do seu HTML de combate para ficar parecido
        div.className = "col"; 
        div.innerHTML = `
          <div class="card h-100 turn-inactive">
            <div class="card-body">
              <div class="d-flex align-items-center justify-content-between">
                <h5 class="mb-0">${p.name}</h5>
                <span class="badge ${p.isPc ? 'text-bg-success' : 'text-bg-secondary'} badge-chip">${p.isPc ? "PC" : "NPC"}</span>
              </div>
              <div class="small text-muted mb-2">N√≠vel ${p.nivel || 0} ‚Ä¢ CA ${p.ca || '‚Äî'}</div>
              <div class="mb-2">
                <strong>HP</strong>: ${p.hpCurrent} / ${p.hpMax}
              </div>
              <button class="btn btn-sm btn-outline-danger botao-remover" data-id="${p.id}">Remover</button>
            </div>
          </div>
        `;
        personagensGrid.appendChild(div);
      });

      // üîπ Bot√µes de remover
      document.querySelectorAll(".botao-remover").forEach(btn => {
        btn.addEventListener("click", e => {
          const id = e.target.getAttribute("data-id");
          let party = getParty();
          party = party.filter(p => p.id != id);
          localStorage.setItem(storageKey, JSON.stringify(party));
          renderParty();
        });
      });
    }

    // üîπ Adicionar/atualizar personagem
    if (formPersonagem) {
      formPersonagem.addEventListener("submit", e => {
        e.preventDefault();
        
        // ‚úÖ CORRE√á√ÉO: Leitura por ID, pois inputs n√£o t√™m 'name'
        const nome = document.getElementById("personagem-nome").value;
        const tipo = document.getElementById("personagem-tipo").value;
        const nivel = parseInt(document.getElementById("personagem-nivel").value) || null;
        const ca = parseInt(document.getElementById("personagem-ca").value) || null;
        const hpMax = parseInt(document.getElementById("personagem-hp-max").value);

        if (!nome || !hpMax) {
          alert("Nome e HP M√°ximo s√£o obrigat√≥rios.");
          return;
        }

        let party = getParty();
        // L√≥gica original: busca por nome para atualizar
        const existente = party.find(p => p.name === nome); 

        if (existente) {
          // Atualiza personagem existente
          party = party.map(p => {
            if (p.name === nome) {
              // ‚úÖ CORRE√á√ÉO: A l√≥gica antiga tentava ler hpCurrent do form.
              // √â mais seguro resetar o HP para o novo m√°ximo ao atualizar.
              return {
                id: p.id, // Preserva ID
                name: nome,
                isPc: tipo === "pc", // Valor do <option> √© "pc"
                nivel: nivel,
                ca: ca,
                hpMax: hpMax,
                hpCurrent: hpMax // Reseta HP para o novo m√°ximo
              };
            }
            return p;
          });
        } else {
          // Adiciona novo personagem
          const novo = {
            id: Date.now(),
            name: nome,
            isPc: tipo === "pc", // Valor do <option> √© "pc"
            nivel: nivel,
            ca: ca,
            hpMax: hpMax,
            hpCurrent: hpMax // Novo personagem com HP cheio
          };
          party.push(novo);
        }

        localStorage.setItem(storageKey, JSON.stringify(party));
        renderParty();
        formPersonagem.reset();

        const modal = bootstrap.Modal.getInstance(document.getElementById("modal-personagem"));
        modal.hide();
      });
    }

    // üîπ Bot√£o Iniciar Combate
    if (btnIniciarCombate) {
      btnIniciarCombate.addEventListener("click", () => {
        const party = getParty();
        if (party.length === 0) {
          alert("Adicione personagens antes de iniciar o combate!");
          return;
        }

        // ‚úÖ Envia dados pro backend
        fetch(`/sessoes/${sessaoId}/combat/start`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            order: party,
            roundStart: 1
          }),
          // ‚úÖ‚úÖ‚úÖ CORRE√á√ÉO PRINCIPAL ‚úÖ‚úÖ‚úÖ
          // Adiciona o cookie de sess√£o na requisi√ß√£o
          credentials: "include", 
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            alert("Combate iniciado!");
            // ‚úÖ B√îNUS: Recarrega a p√°gina para mostrar a UI de combate
            window.location.reload(); 
          } else {
            alert(`Erro: ${data.message}`);
          }
        })
        .catch(err => {
          console.error("Erro ao iniciar combate:", err);
          alert("Erro ao iniciar combate no servidor.");
        });
      });
    }

    // Renderiza a party (se n√£o estiver em combate)
    renderParty();
  })();
</script>