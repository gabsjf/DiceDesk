<div class="card p-4">
  <div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="h5 m-0"><%= campanha.nome %></h2>
    <div class="d-flex gap-2">
      <a class="btn btn-sm btn-warning" href="/campanhas/editar/<%= campanha.id %>"><i class="bi bi-pencil me-1"></i> Editar</a>
      <a class="btn btn-sm btn-outline-secondary" href="/campanhas"><i class="bi bi-arrow-left me-1"></i> Voltar</a>
    </div>
  </div>
  <div class="text-muted small mb-3"><i class="bi bi-controller me-1"></i> <%= campanha.sistema %></div>
  <p class="mb-0"><%= campanha.descricao %></p>
</div>
