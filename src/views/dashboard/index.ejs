<div class="d-flex justify-content-between align-items-center mb-4">

    <div class="d-flex gap-2">
        <a href="/campanhas/criar" class="btn btn-primary btn-ring">
            <i class="bi bi-plus-lg me-1"></i> Nova campanha
        </a>
        <a href="/campanhas" class="btn btn-ring">
            <i class="bi bi-collection me-1"></i> Ver todas
        </a>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-sm-6 col-lg-3">
        <div class="arc-card p-3">
            <div class="text-muted small mb-1">Campanhas</div>
            <div class="d-flex align-items-end justify-content-between">
                <div class="display-6 fw-bold"><%= kpis.totalCampanhas %></div>
                <i class="bi bi-dice-5 fs-3 text-muted"></i>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="arc-card p-3">
            <div class="text-muted small mb-1">Sistemas</div>
            <div class="d-flex align-items-end justify-content-between">
                <div class="display-6 fw-bold"><%= kpis.totalSistemas %></div>
                <i class="bi bi-diagram-3 fs-3 text-muted"></i>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="arc-card p-3">
            <div class="text-muted small mb-1">Próxima sessão</div>
            <div class="d-flex align-items-end justify-content-between">
                <div class="h4 m-0"><%= proximaSessao ? proximaSessao.dataFmt : '--' %></div>
                <i class="bi bi-calendar-event fs-3 text-muted"></i>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="arc-card p-3">
            <div class="text-muted small mb-1">Arquivos</div>
            <div class="d-flex align-items-end justify-content-between">
                <div class="display-6 fw-bold">--</div>
                <i class="bi bi-folder2-open fs-3 text-muted"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12 col-xl-8">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3 class="h6 m-0 text-uppercase text-muted">Últimas campanhas</h3>
            <a href="/campanhas" class="small text-decoration-none"><i class="bi bi-arrow-right-circle me-1"></i> ver todas</a>
        </div>

        <% if (!ultimasCampanhas || ultimasCampanhas.length === 0) { %>
            <div class="empty">
                <i class="bi bi-collection fs-1 d-block mb-2"></i>
                <p class="mb-0">Crie sua primeira campanha para começar.</p>
            </div>
        <% } else { %>
            <div class="row g-3">
                <% ultimasCampanhas.forEach(c => { %>
                    <div class="col-12 col-md-6">
                        <div class="arc-card h-100">
                            <div class="arc-cover"
                                <% if (c.capaUrl) { %>
                                    style="background-image:url('<%= c.capaUrl %>'); background-size:cover; background-position:center;"
                                <% } %>
                            ></div>
                            <div class="arc-body">
                                <div class="d-flex align-items-center justify-content-between mb-1">
                                    <span class="arc-badge"><i class="bi bi-dice-5"></i> <%= c.sistema %></span>
                                </div>
                                <h4 class="arc-title"><%= c.nome %></h4>
                                <p class="text-muted small mb-3"><%= c.descricao %></p>
                                <div class="mt-auto d-flex gap-2">
                                    <a class="btn btn-primary flex-fill" href="/campanhas/<%= c.id %>">
                                        <i class="bi bi-play-fill me-1"></i> Entrar
                                    </a>
                                    <a class="btn btn-ring" href="/campanhas/editar/<%= c.id %>" title="Editar"><i class="bi bi-pencil"></i></a>
                                    <a class="btn btn-danger btn-ring" href="/campanhas/apagar/<%= c.id %>" title="Apagar"><i class="bi bi-trash"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div class="col-12 col-xl-4">
        <h3 class="h6 mb-2 text-uppercase text-muted">Atividade recente</h3>
        <div class="arc-card p-3">
            <% if (!atividades || atividades.length === 0) { %>
                <div class="text-muted small">Nada por aqui ainda.</div>
            <% } else { %>
                <ul class="list-unstyled m-0">
                    <% atividades.forEach(a => { %>
                        <li class="d-flex gap-3 py-2 border-bottom border-0" style="border-color:rgba(255,255,255,.06)!important;">
                            <div class="text-primary-emphasis">
                                <i class="bi <%= a.icon %>"></i>
                            </div>
                            <div>
                                <div class="fw-semibold"><%= a.title %></div>
                                <div class="text-muted small"><%= a.detail %></div>
                                <div class="text-muted small"><i class="bi bi-clock me-1"></i><%= a.when %></div>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
    </div>
</div>